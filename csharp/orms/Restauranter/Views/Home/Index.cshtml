@{ 
    ViewData["Title"] = "Add a Review"; 
} 
@model Review
<div id="wrapper">
    <div class="container">
    <div class="jumbotron">
        <h1>Add a Review</h1>
            <form asp-action="Create" asp-controller="Home">
                <div class="row">
                    <div class="form-group col-md-6">
                        <label for="name">Your Name</label>
                        <span class="error" asp-validation-for="ReviewerName"></span>
                        <input type="text" class="form-control" asp-for="ReviewerName">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="restaurant">Restaurant</label>
                        <span class="error" asp-validation-for="RestaurantName"></span>
                        <input type="text" class="form-control" asp-for="RestaurantName">
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        <label for="visitdate">Date of Visit</label>
                        <span class="error" asp-validation-for="VisitDate"></span>
                        <input type="date" id="visitDate" class="form-control" asp-for="VisitDate">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="stars">Stars</label>
                        <span class="error" asp-validation-for="Stars"></span>
                        <select class="form-control custom-select" asp-for="Stars">
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                            <option value="5">5</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label for="message">Review</label>
                    <span class="error" asp-validation-for="Message"></span>
                    <textarea type="text" class="form-control" style="min-width: 100%" asp-for="Message"></textarea>
                </div>
                <button type="submit" class="btn btn-info btn-lg">Submit</button>
            </form>
        </div>
    </div>
</div>
@{
    ViewData["Title"] = "Login and Registration";
}
@model Users

<div id="wrapper">
    <div class="container">
        <h3 class="display-4">Register</h3>
        <form asp-action="Create" asp-controller="Home" method="post">
            <div class="form-group">
                <label for="firstName">First Name</label>
                <span class=" error" asp-validation-for="FirstName"></span>
                <input type="text" class="form-control form-control-sm" asp-for="FirstName">
            </div>
            <div class="form-group">
                <label for="firstName">Last Name</label>
                <span class=" error" asp-validation-for="LastName"></span>
                <input type="text" class="form-control form-control-sm" asp-for="LastName">
            </div>
            <div class="form-group">
                <label for="email">Email address</label>
                <span class=" error" asp-validation-for="Email"></span>
                <input type="text" class="form-control form-control-sm" asp-for="Email">
            </div>
            <div class="form-group">
                <label for="initialPassword">Password</label>
                <span class=" error" asp-validation-for="Password"></span>
                <input type="password" class="form-control form-control-sm" asp-for="Password">
            </div>
            <div class="form-group">
                <label for="confirmPassword">Confirm Password</label>
                <span class=" error" asp-validation-for="Password"></span>
                <input type="password" class="form-control form-control-sm" asp-for="ConfirmPassword">
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
        <a href="Login" class="link">Already registered? Login here!</a>
    </div>
</div>
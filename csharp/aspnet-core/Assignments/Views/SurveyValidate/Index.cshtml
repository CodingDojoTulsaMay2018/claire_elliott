<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Dojo Survey</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB"
        crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/style.css">
</head>

@model Surveyor

<body>
    <div id="wrapper">
        <h2 class="text-center mt-5">Dojo Survey</h2>
        <form asp-action="Process" asp-controller="SurveyValidate" method="post" class="survey-form">
            <div class="form-group">
                <label for="name">Name</label>
                <span class="error" asp-validation-for="UsersName"></span>
                <input type="text" class="form-control" asp-for="UsersName">
            </div>
            <div class="form-group">
                <label for="dojos">Dojo Location</label>
                <span class="error" asp-validation-for="DojoLocation"></span>
                <input type="text" class="form-control" asp-for="DojoLocation">
            </div>
            <div class="form-group">
                <label for="languages">Favorite Language</label>
                <span class="error" asp-validation-for="FavLanguage"></span>
                <input type="text" class="form-control" asp-for="FavLanguage">
            </div>
            <div class="form-group">
                <label for="name">Comments (optional)</label>
                <span class="error" asp-validation-for="Comments"></span>
                <textarea class="form-control" asp-for="Comments"></textarea>
            </div>
            <button type="submit" class="btn btn-success">Submit</button>
        </form>
    </div>
</body>

</html>
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Dojo Survey</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB"
        crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/style.css">
</head>

@model Form

<body>
    <div id="wrapper">
        <h2 class="text-center mt-5">New User Information</h2>
        <form asp-action="Process" asp-controller="Form" method="post" class="survey-form">
            <div class="form-group">
                <label for="firstName">First Name</label>
                <span class="error" asp-validation-for="FirstName"></span>
                <input type="text" class="form-control" asp-for="FirstName">
            </div>
            <div class="form-group">
                <label for="lastName">Last Name</label>
                <span class="error" asp-validation-for="LastName"></span>
                <input type="text" class="form-control" asp-for="LastName">
            </div>
            <div class="form-group">
                <label for="age">Age</label>
                <span class="error" asp-validation-for="Age"></span>
                <input type="text" class="form-control" asp-for="Age">
            </div>
            <div class="form-group">
                <label for="email">Email Address</label>
                <span class="error" asp-validation-for="Email"></span>
                <input type="text" class="form-control" asp-for="Email">
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <span class="error" asp-validation-for="Password"></span>
                <input type="password" class="form-control" asp-for="Password">
            </div>
            <button type="submit" class="btn btn-success">Submit</button>
        </form>
    </div>
</body>

</html>